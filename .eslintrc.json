{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": ["@stylistic"],
  "rules": {
    "@stylistic/indent": ["error", 4],
    "@stylistic/linebreak-style": ["error", "unix"],
    "@stylistic/quotes": ["error", "single"],
    "@stylistic/semi": ["error", "always"]
  }
}
